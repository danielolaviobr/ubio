{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "strict": true,
    "rootDirs": [".", "./src"],
    "paths": {
      "@controllers/*": ["src/controllers/*"],
      "@domain/*": ["src/domain/*"],
      "@modules/*": ["src/modules/*"],
      "@repositories/*": ["src/repositories/*"],
      "@jobs/*": ["src/jobs/*"],
      "@infra/*": ["src/infra/*"]
    }
  }
}
